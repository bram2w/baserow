# Configuración de producción para DigitalOcean
# Configurado para data.arrebolweddings.com
BASEROW_PUBLIC_URL=https://data.arrebolweddings.com

# Claves de seguridad - GENERAR NUEVAS PARA PRODUCCIÓN
SECRET_KEY=CAMBIAR_POR_CLAVE_SEGURA_ALEATORIA_64_CARACTERES
DATABASE_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO_DB
REDIS_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO_REDIS

# Base de datos (usar PostgreSQL en DigitalOcean)
DATABASE_USER=baserow
DATABASE_NAME=baserow
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Email (configurar con tu proveedor SMTP)
EMAIL_SMTP=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USE_TLS=true
EMAIL_SMTP_USER=tu-email@arrebolweddings.com
EMAIL_SMTP_PASSWORD=tu-password-email
FROM_EMAIL=baserow@arrebolweddings.com

# SSL y seguridad
BASEROW_ENABLE_SECURE_PROXY_SSL_HEADER=true
BASEROW_DISABLE_PUBLIC_URL_CHECK=false